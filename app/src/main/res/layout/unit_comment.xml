<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
     app:cardBackgroundColor="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_profile_chat_unit"
        app:civ_border_width="1.2px"
        app:civ_border_color="#cbcbcb"
        android:id="@+id/root_comment_profile_img"
        app:civ_circle_background_color="#fff"
        android:layout_gravity="top|left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"



        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="70dp"
    android:layout_marginTop="15dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F2F3F5"
        android:padding="10dp"



        ><LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="name"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="#000"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:text="Comment here "
            android:gravity="top|left"
            android:textColor="#000"
            android:textSize="14sp"


            />

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4d"
            android:textColor="#9FA2A6"
            android:id="@+id/time_of_post"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:textColor="#9FA2A6"
            android:id="@+id/root_post_like"
            android:layout_marginLeft="10dp"
            android:gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:textColor="#9FA2A6"
            android:id="@+id/reply_root_post"
            android:layout_marginLeft="10dp"
            android:gravity="center"

            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read more comments"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/read_more_sub_comments"
        android:textSize="15sp"
        android:layout_marginTop="4dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/next_subComment"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/profile_one"
            app:civ_border_width="1px"
            android:id="@+id/profile_subcomment_"
            app:civ_border_color="#cbcbcb"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Subcomment_name"
            android:text="Gunjan "
            android:textColor="#000"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="8dp"
            android:maxLines="1"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="awesome! I am really surprised"
            android:textColor="#8b8b8b"
            android:id="@+id/subcoment_one"
            android:gravity="center_vertical|left"
            android:layout_gravity="center_vertical"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/first_subComment"

        android:layout_marginLeft="4dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/profile_one"
            app:civ_border_width="1px"
            android:id="@+id/profile_subcomment_another"
            app:civ_border_color="#cbcbcb"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Subcomment_name_another"
            android:text="Gunjan "
            android:textColor="#000"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:maxLines="1"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="awesome! I am really surprised"
            android:textColor="#8b8b8b"
            android:id="@+id/subcoment_one_another"
            android:gravity="center_vertical|left"
            android:layout_gravity="center_vertical"

            />
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>